<!doctype html>
<html lang="en">
  <link>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin</title>

    <!--Css-->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!--Script-->
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.min.js"></script>
    <script src="js/admin.js"></script>
  </head>
  <body>

    <!--Header-->
    <div class="container">
      <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <span class="navbar-brand mb-0 h1">Admin Page</span>
        </div>
      </nav>
    </div>

    <!--List Viewer-->
    <div class="container">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">TODO</th>
            <th scope="col">완료여부</th>
            <th scope="col">
              <button type="button" class="btn btn-outline-primary">추가</button>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
            <td>
              <button type="button" class="btn btn-outline-success">수정</button>
              <button type="button" class="btn btn-outline-danger">삭제</button>
            </td>
          </tr>
          <tr>
            <th scope="row">2</th>
            <td>Jacob</td>
            <td>Thornton</td>
            <td>
              <button type="button" class="btn btn-outline-success">수정</button>
              <button type="button" class="btn btn-outline-danger">삭제</button>
            </td>
          </tr>
          <tr>
            <th scope="row">3</th>
            <td colspan="2">Larry the Bird</td>
            <td>
              <button type="button" class="btn btn-outline-success">수정</button>
              <button type="button" class="btn btn-outline-danger">삭제</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <!--Modals-->
    <div class="container">
      <div class="modal fade" id="contentFormModal" tabindex="-1" aria-labelledby="contentFormModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="contentFormModalLabel">TODO Content</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form>
                <div class="mb-3">
                  <label for="recipient-name" class="col-form-label">작업내용</label>
                  <input type="text" class="form-control" id="recipient-name">
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Sumit</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>